{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": false,
    "paths": {
      "@decorator": ["src/common/decorator"],
      "@graphql": ["src/common/graphql"],
      "@guard": ["src/common/guard"],
      "@dto": ["src/common/dto"],
      "@interceptor": ["src/common/interceptor"],
      "@middleware": ["src/common/middleware"],
      "@config": ["src/config"],
			"@environments": ["src/environments/index"],
			"@environments/*": ["src/environments/*"],
      "@controller": ["src/controller"],
      "@model": ["src/model"],
      "@resolver": ["src/resolver"],
      "@service": ["src/service"],
      "@schedule": ["src/schedule"],
      "@utils": ["src/utils"],
      "@heyforms/integrations": ["src/utils/integrations"],
      "@heyforms/nestjs": ["src/utils/nestjs"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dashboard", "dist", "**/node_modules/@heyform-inc/shared-types-enums"]
}
