# ==========================================================
# CORE APPLICATION SETTINGS
# ==========================================================
# Environment: development, production, test
NODE_ENV=development
# Port the server listens on
APP_LISTEN_PORT=8080
# Hostname/IP to bind the server to
APP_LISTEN_HOSTNAME=127.0.0.1
# Public-facing URL for the application
APP_HOMEPAGE=http://localhost:3000
APP_HOMEPAGE_URL=http://127.0.0.1:8080

# ==========================================================
# SECURITY & ENCRYPTION - REQUIRED
# ==========================================================
# Random keys for security (generate strong random strings for production)
KEY1=random_session_key
KEY2=random_encryption_key

# Session configuration
SESSION_MAX_AGE=15d
SESSION_KEY="key1"
FORM_ENCRYPTION_KEY="key2"

# ==========================================================
# DATABASE - REQUIRED
# ==========================================================
# MongoDB connection (Required)
MONGO_URI=mongodb://localhost:27017/heyform
MONGO_USER=
MONGO_PASSWORD=
MONGO_SSL_CA=

# Redis (Required for job queues)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# ==========================================================
# FILE UPLOADS & MEDIA - REQUIRED FOR IMAGE PROCESSING
# ==========================================================
# Allowed file types for upload
UPLOAD_FILE_TYPES=".jpg,.png,.bmp,.gif,.txt,.md,.doc,.docx,.xls,.xlsx,.csv,.ppt,.pptx,.pdf,.mp4,.wmv,.zip,.rar,.7z"

# Bunny CDN (Required for image processing)
BUNNY_CACHE_DIR=./cache/bunny
BUNNY_API_URL=
BUNNY_API_ACCESS_KEY=
BUNNY_URL_PREFIX=
BUNNY_TOKEN_KEY=

# ==========================================================
# EMAIL - REQUIRED FOR EMAIL NOTIFICATIONS
# ==========================================================
SMTP_FROM="HeyForm <noreply@example.com>"
SMTP_HOST="example.com"
SMTP_PORT=465
SMTP_USER=
SMTP_PASSWORD=

