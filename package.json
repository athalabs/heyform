{
	"name": "heyform",
	"homepage": "https://heyform.net",
	"author": "Heyooo, Inc.",
	"license": "AGPL-3.0",
	"private": true,
	"engines": {
		"pnpm": ">=8",
		"node": ">=16"
	},
	"scripts": {
		"dev": "run-p dev:webapp dev:server",
		"dev:webapp": "pnpm --filter ./packages/webapp dev",
		"dev:server": "pnpm --filter ./packages/server dev",
		"build": "run-p build:server build:webapp",
		"build:server": "pnpm --filter ./packages/server build",
		"build:webapp": "pnpm --filter ./packages/webapp build",
		"build:deps": "pnpm --filter ./packages/utils build && pnpm --filter ./packages/shared-types-enums build && pnpm --filter ./packages/answer-utils build"
	},
	"dependencies": {
		"@popperjs/core": "^2.11.8",
		"fast-equals": "^5.2.2",
		"libphonenumber-js": "^1.12.6",
		"mobx-react-lite": "^4.1.0",
		"npm-run-all": "^4.1.5",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-popper": "^2.3.0",
		"react-transition-state": "^2.3.1",
		"signature_pad": "^5.0.7",
		"validator": "^13.15.0"
	},
	"pnpm": {
		"neverBuiltDependencies": [],
		"overrides": {
			"apollo-upload-client": "17.0.0",
			"fs-capacitor": "6.2.0",
			"multer": "1.4.5-lts.1",
			"express": "4.19.2",
			"dayjs": "^1.11.3",
			"i18next": "^21.9.1",
			"cross-fetch": "3.1.5",
			"ip": "2.0.1",
			"ws": "7.4.6",
			"got": "11.8.5",
			"react-i18next": "^11.18.6",
			"@babel/traverse": "^7.24.1",
			"node-fetch": "2.6.7",
			"lodash": "4.17.21",
			"qs": "^6.12.0",
			"busboy": "1.6.0",
			"axios": "1.6.8",
			"minimist": "^1.2.6"
		}
	},
	"devDependencies": {
		"@types/react": "18.2.61",
		"@types/react-dom": "18.2.19",
		"@types/validator": "^13.15.0",
		"typescript": "^5.8.2"
	}
}
